<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/checkingStatusText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/checkingChangeTimeText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"
        android:layout_below="@+id/checkingStatusText"
        android:textAlignment="center" />

    <Button
        android:id="@+id/checkingAgreeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/checkingChangeTimeText"
        android:layout_marginVertical="8dp"
        android:text="@string/changeReport" />
</RelativeLayout>