<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="check_box">
        <item name="colorControlNormal">@color/dark_blue_text</item>
        <item name="colorControlActivated">@color/dark_blue_text</item>
    </style>

    <style name="radio_button" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorControlActivated">@android:color/holo_red_light</item>
        //black is the color of the normal state
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="shop_selector_selected">
        <item name="android:backgroundTint">@color/mpei_blue</item>
        <item name="android:background">@drawable/shape_selector_oval</item>
        <item name="android:textColor">@color/mpei_white</item>
    </style>

    <style name="shop_selector_unselected">
        <item name="android:backgroundTint">@color/bg_blue</item>
        <item name="android:background">@drawable/shape_selector_oval</item>
        <item name="android:textColor">@color/mpei_blue</item>
    </style>

</resources>