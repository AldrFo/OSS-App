<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp"
    android:background="@drawable/background_subject"
    android:orientation="horizontal"
    android:padding="7dp">

    <View
        android:id="@+id/indicator"
        android:layout_width="8dp"
        android:layout_height="match_parent"
        android:background="@drawable/shape_indicator_red" />

    <LinearLayout
        android:id="@+id/lessonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subjectTime"
                style="@style/TimetableMainText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="9:20 - 10:55" />

            <TextView
                android:id="@+id/subjectType"
                style="@style/TimetableSecondaryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Лекция" />
        </LinearLayout>

        <TextView
            android:id="@+id/subjectName"
            style="@style/TimetableMainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Математический анализ" />

        <TextView
            android:id="@+id/subjectPlace"
            style="@style/TimetableSecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ЭО и ДОТ" />

        <TextView
            android:id="@+id/subjectTeacherName"
            style="@style/TimetableSecondaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Доц. Алексиадис Н. Ф." />
    </LinearLayout>

</LinearLayout>